set -o errexit
set -o nounset
set -o pipefail

SCRIPT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/" && pwd -P)"
RELATIVE_SCRIPT_ROOT="$(cd "$(dirname $(realpath "${BASH_SOURCE[0]}"))/" && pwd -P)"

CONTAINER_IMAGE="public.ecr.aws/k1e6s8o8/generate-attribution:2022-09-11-1662925457"

ROOT_MODULE_NAME="$1"
PROJECT_ROOT="$2"
GOLANG_VERSION_TAG="$3"
OUTPUT_DIR="$4"

USE_DOCKER=$(cat $SCRIPT_ROOT/.usedocker)

if [[ "$USE_DOCKER" = "true" ]] ; then
    docker run \
        --mount type=bind,source="$PROJECT_ROOT",target=/project \
        --entrypoint node $CONTAINER_IMAGE --dns-result-order=ipv4first generate-attribution-file.js $ROOT_MODULE_NAME /project $GOLANG_VERSION_TAG /project/_output

    exit $?
fi

DOCKERFILE_DIR=$(mktemp -d)
trap "rm -rf $DOCKERFILE_DIR" EXIT

cat << EOF > $DOCKERFILE_DIR/Dockerfile
FROM $CONTAINER_IMAGE AS run

WORKDIR /project

RUN --mount=type=bind,source=./,target=/project \
    node --dns-result-order=ipv4first /usr/src/app/generate-attribution-file.js "${ROOT_MODULE_NAME}" "/project" "${GOLANG_VERSION_TAG}" "/project/_output" "/attribution-output"

FROM scratch as save
COPY --from=run /attribution-output/* .

EOF

cat << EOF > $DOCKERFILE_DIR/Dockerfile.dockerignore
*
!**/GIT_TAG
!**/LICENSES/**/*
!**/attribution/*
EOF

$RELATIVE_SCRIPT_ROOT/../buildkit.sh  build \
    --frontend dockerfile.v0 \
    --local dockerfile=$DOCKERFILE_DIR \
    --local context=$PROJECT_ROOT \
    --progress plain \
    --opt target=save \
    --output type=local,dest=$OUTPUT_DIR/attribution &> /dev/null
    